generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String @id @unique @default(uuid())
  name       String
  price      Float
  photo      String
  categoryId String
  quantity   Float

  category Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id       String    @id @unique @default(uuid())
  tipo     String
  products Product[]
}
